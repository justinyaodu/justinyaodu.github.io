{
  "compilerOptions": {
    "lib": ["es2022"],
    "target": "es2022",
    "module": "node16",
    "moduleResolution": "node16",
    "verbatimModuleSyntax": true,
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitOverride": true,
    "noEmit": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
